<h2>All tests</h2>

<% if @tests.present? %>
  <table>
    <tr>
      <th>Title</th>
      <th>Level</th>
      <th>Category</th>
      <th colspan="4">Actions</th>
    </tr>

    <%= render @tests %>
  </table>

<% else %>
  <p>Ничего не найдено</p>
<% end %>

<p>
  <%= link_to 'New test', new_test_path %>
</p>
